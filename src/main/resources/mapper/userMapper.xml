<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userMapper">
    <insert id="save" parameterType="com.ddhouse.chat.vo.User">
        insert into USER(name, fcm_token, reg_date)
        values(#{name}, #{fcmToken}, #{regDate})
    </insert>
    <select id="findAll" resultType="com.ddhouse.chat.vo.User">
        select id, name, fcm_token, reg_date from USER
    </select>

    <select id="findById" parameterType="Long" resultType="com.ddhouse.chat.vo.User">
        select * from USER WHERE id = #{id}
    </select>
</mapper>
