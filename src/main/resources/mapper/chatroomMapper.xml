<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="chatroomMapper">
    <select id="findByPhoneNumber" parameterType="String" resultType="ChatRoom">
        select * from chat_room WHERE phone_number = #{phoneNumber}
    </select>

    <insert id="save" parameterType="ChatRoom" useGeneratedKeys="true" keyProperty="id">
        insert into chat_room(name, member_num, is_group, phone_number, reg_date)
        values(#{name}, #{memberNum}, #{isGroup}, #{phoneNumber}, #{regDate})
    </insert>

    <update id="memberNumUpdate" parameterType="ChatRoom">
        UPDATE chat_room SET member_num = #{memberNum} WHERE id = #{id}
    </update>


    <select id="findById" parameterType="Long" resultType="ChatRoom">
        select * from chat_room WHERE id = #{id}
    </select>
    <delete id="deleteById" parameterType="Long">
        delete from chat_room where id = #{id}
    </delete>

</mapper>